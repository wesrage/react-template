{
  "name": "react-template",
  "version": "0.1.0",
  "description": "React, Redux, Babel, API server, hot module replacement",
  "license": "ISC",
  "scripts": {
    "start": "concurrently --kill-others \"npm run dev\" \"npm run dev-api\"",
    "build": "webpack --verbose --colors --display-error-details --config webpack.config.prod.babel.js",
    "dev": "better-npm-run dev",
    "dev-api": "better-npm-run dev-api",
    "test": "jest --watch"
  },
  "betterScripts": {
    "dev": {
      "command": "node index",
      "env": {
        "API_HOST": "localhost",
        "API_PORT": 3030,
        "HTTP_PORT": 3000
      }
    },
    "dash": {
      "command": "webpack-dashboard -- node index",
      "env": {
        "API_HOST": "localhost",
        "API_PORT": 3030,
        "HTTP_PORT": 3000
      }
    },
    "dev-api": {
      "command": "node api",
      "env": {
        "API_HOST": "localhost",
        "API_PORT": 3030
      }
    },
    "prod-api": {
      "command": "node api",
      "env": {
        "API_HOST": "localhost",
        "API_PORT": 8080,
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wesleywaldner/react-template.git"
  },
  "moduleRoots": [
    "api",
    "src"
  ],
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-jest": "^15.0.0",
    "babel-preset-react-hmre": "^1.1.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "jest": "^15.1.1",
    "react-test-renderer": "^15.4.2",
    "redux-devtools-extension": "^2.13.0",
    "webpack-dashboard": "^0.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.16.1"
  },
  "dependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "better-npm-run": "^0.0.11",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "concurrently": "^2.2.0",
    "css-loader": "^0.26.0",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "http-proxy": "^1.16.2",
    "piping": "^1.0.0-rc.4",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^3.3.2",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "style-loader": "^0.13.1",
    "styled-components": "^1.4.3",
    "webpack": "2.2.1"
  }
}
